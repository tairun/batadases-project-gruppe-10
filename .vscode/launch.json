    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Aktuelle Datei",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            },
            "cwd": "${workspaceRoot}",
        },
        {
            "name": "Python: Modul",
            "type": "python",
            "request": "launch",
            "module": "app",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Aktuelle Datei (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "externalTerminal"
        }
    ]
}